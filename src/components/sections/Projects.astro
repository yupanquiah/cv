---
import Section from "@/components/Section.astro";

import { projects } from "@/cv";
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ url, description, highlights, name, isActive }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a href={url} title={`Ver el proyecto ${name}`}>
                    {name}
                  </a>
                  {isActive && <span>â€¢</span>}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlights) => {
                  return <span>{highlights}</span>;
                })}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid #bcbcbc;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  header {
    flex: 1;
  }

  a {
    color: #111;
  }

  a:hover {
    text-decoration: underline;
  }

  h3 {
    margin-bottom: 10px;
    color: #030712;
    font-weight: 600;
    font-size: 16px;
  }

  h3 span {
    color: #00bc2f;
    animation-name: flicker;
    animation-duration: 3s;
    animation-timing-function: ease-in;
    animation-iteration-count: infinite;
  }

  p {
    font-size: 12px;
    margin-bottom: 4px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 10px;
  }

  footer span {
    border-radius: 0.5rem;
    background: #f1f1f1;
    color: #030712;
    font-size: 0.625rem;
    font-family: "Monaspace Argon";
    font-weight: 500;
    padding: 4px 10px;
  }

  @keyframes flicker {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.25;
    }
    100% {
      opacity: 1;
    }
  }
</style>
