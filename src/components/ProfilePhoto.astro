---
import { Image } from "astro:assets";

import photo from "@/assets/imgs/profile.webp";

import { basics } from "@/data/cv.json";
const { name } = basics;
---

<Image
  width={120}
  height={120}
  src={photo}
  alt={`Foto de perfil de ${name}`}
  loading="lazy"
/>

<style>
  img {
    border-radius: 12px;
    aspect-ratio: 1/1;
    object-fit: cover;
  }

  @media print {
    img {
      display: none;
    }
  }
</style>
