---
import { Image } from "astro:assets";

import photo from "@/assets/imgs/profile.webp";

import { basics } from "@/data/cv.json";
const { name } = basics;
---

<figure>
  <Image src={photo} alt={`Foto de perfil de ${name}`} loading="lazy" />
</figure>

<style>
  img,
  figure {
    width: 100px;
    height: 100px;
  }

  img {
    border-radius: 12px;
    aspect-ratio: 1/1;
    object-fit: cover;
  }

  @media print {
    figure {
      display: none;
    }
  }
</style>
